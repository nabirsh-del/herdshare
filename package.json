{
  "name": "herdshare",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "db:generate": "turbo run db:generate --filter=@herdshare/db",
    "db:push": "turbo run db:push --filter=@herdshare/db",
    "db:migrate": "turbo run db:migrate --filter=@herdshare/db",
    "db:seed": "turbo run db:seed --filter=@herdshare/db",
    "db:studio": "turbo run db:studio --filter=@herdshare/db"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
